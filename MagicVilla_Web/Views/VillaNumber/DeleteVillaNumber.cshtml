@model MagicVilla_Web.Models.VM.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />
        <input hidden asp-for="VillaNumber.VillaNo"/>
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo " class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" disabled class=" form-control" />
               
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10  pb-3">
                <select asp-for="VillaNumber.VillaId" disabled class="form-select" asp-items="@Model.VillaList">
                    <options disabled selected>--Select Villa--</options>
                </select>
               
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10  pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" disabled  class="form-control" rows="5"></textarea>
               
            </div>

            <div class="col-5">
                <a asp-action="IndexVillaNumber" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

